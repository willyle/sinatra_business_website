<!doctype html>
<html>
	<head>
		<meta charset="utf-8" />

		<title><%= @title%></title>

		<link rel="stylesheet" type="text/css" href="/css/style.css">

		<script src="http://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
		<script src="/js/javascript.js"></script>

	</head>

	<body>
		<%
		nav = ["Home", "How It Works", "Our Services", "Contact Us", "Book An Appointment", "Join Our Team"] 
		pages = ["/", "about", "services", "contact", "appointment", "recruit"] 
		%>

		<header>
			<div id="login_signup_buttons">
				<button id="login_button">Login</button>
				<button id="signup_button">Signup</button>
			</div>

			<div id="logo">
				<h2>TechTo-Me</h2>
			</div>

			<nav>
				<ul id="nav">

				<% nav.each_with_index do |nav_item, nav_index| %>
					<li>
						<a href="<%= pages[nav_index] %>">
							<%= nav_item %>
						</a>
					</li>
				<% end %>

				</ul>
			</nav>

			<div class="clear"></div>
		</header>

		<div id="container">
			<div id="login" class="hide">
				<form method="post" action="/signin">
					<label for="username">Username</label>
					<input type="text" name="username"><br>
					<label for="password">&nbsp;Password</label>
					<input type="password" name="password"><br><br>
					<input type="submit">
				</form>
			</div>

			<div id="signup" class="hide">
				<form method="post" action="/signin">
					<label for="username">Username</label>
					<input type="text" name="username"><br>
					<label for="email">&nbsp; &nbsp; &nbsp; &nbsp;Email</label>
					<input type="text" name="email"><br><br>
					<input type="submit" value="Signup">
				</form>
			</div>

			<div id="banner_photo">
				<img src="/images/<%= @photo%>.jpg" />
			</div>

			<%= yield %>



		</div>

		<footer>
			<p>TechTo-Me&reg; 2015 All rights reserved.</p>
		</footer>
	</body>
</html>